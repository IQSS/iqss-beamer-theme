\AtBeginSection{
  \title{\insertsectionhead}
  \begin{frame}
    \begin{beamercolorbox}[sep=12pt,center]{part title}
      \usebeamerfont{section title}\sectionname~\insertsectionnumber\par
    \end{beamercolorbox}
    \tableofcontents[currentsection]
  \end{frame}
}

\AtBeginPart{
  \title{\insertpart}
  \begin{frame}
    \begin{beamercolorbox}[sep=12pt,center]{part title}
      \usebeamerfont{part title}\partname~\insertromanpartnumber\par
    \end{beamercolorbox}
    \tableofcontents
  \end{frame}
}

